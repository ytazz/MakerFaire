<Window x:Class="CraneMonitor.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CraneMonitor"
        mc:Ignorable="d"
        Title="Log" Height="400" Width="600" Closing="Window_Closing">
    <Grid>
            <RichTextBox x:Name="text">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="RichTextBox"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <!--
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                <TextBlock x:Name="text" TextWrapping="Wrap" Margin="0,0,0,20">TextBlock</TextBlock>
            </StackPanel>
        </ScrollViewer>
            -->
            
    </Grid>
</Window>
