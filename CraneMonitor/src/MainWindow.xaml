<Window x:Class="CraneMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CraneMonitor"
        xmlns:lib="clr-namespace:MeterDisplay"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1900" Closing="Window_Closing">
    <Grid Background="#FF000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="330" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="310" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="470" />
        </Grid.ColumnDefinitions>

        <!--
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10,10,10,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Camera Image" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" Foreground="Black" Background="LightGreen" FontWeight="Bold"  TextAlignment="Center"/>
            <Image x:Name="image" Stretch="Uniform"/>
        </StackPanel>
        -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="6" Margin="10,10,10,0">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image x:Name="image1" Grid.Row="0" Grid.Column="0" Stretch="Uniform"/>
                <Image x:Name="image2" Grid.Row="0" Grid.Column="1" Stretch="Uniform"/>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="2" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Power (PWM)"  HorizontalAlignment="Stretch" Margin="5,10,5,0" VerticalAlignment="Top" Foreground="Black" Background="White" FontWeight="Bold" TextAlignment="Center" FontSize="14"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Velocity"     HorizontalAlignment="Stretch" Margin="5,10,5,0" VerticalAlignment="Top" Foreground="Black" Background="White" FontWeight="Bold" TextAlignment="Center" FontSize="14"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Encoder"      HorizontalAlignment="Stretch" Margin="5,10,5,0" VerticalAlignment="Top" Foreground="Black" Background="White" FontWeight="Bold" TextAlignment="Center" FontSize="14"/>
            <TextBlock Grid.Row="0" Grid.Column="3" Text="Potentio"     HorizontalAlignment="Stretch" Margin="5,10,5,0" VerticalAlignment="Top" Foreground="Black" Background="White" FontWeight="Bold" TextAlignment="Center" FontSize="14"/>
            <lib:MeterGrid x:Name="meters" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Margin="0,10,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10,0,5,0">
            <TextBlock Text="Functions"                                  HorizontalAlignment="Stretch" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="Black" Background="White" FontWeight="Bold" TextAlignment="Center" FontSize="14"/>
            <lib:EnableButton x:Name="BtnRegister" Content="Register"    HorizontalAlignment="Left" Margin="10,10,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow" OnEnable="GameRegister"/>
            <lib:EnableButton x:Name="BtnStart" Content="Start / Stop"   HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="LightGreen" OnEnable="GameStart" OnDisable="GameStop"/>
            <lib:EnableButton x:Name="BtnPause" Content="Pause"          HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Orange" OnEnable="GameStartPause" OnDisable="GameStopPause"/>
            <lib:EnableButton x:Name="BtnHalt" Content="HALT"            HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Red"/>
            <lib:EnableButton x:Name="BtnMag" Content="Grap Mag"         HorizontalAlignment="Left" Margin="10,15,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Aqua"/>
            <lib:EnableButton x:Name="BtnGrapL" Content="Grap Rot L"     HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow"/>
            <lib:EnableButton x:Name="BtnGrapR" Content="Grap Rot R"     HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow"/>
            <lib:EnableButton x:Name="BtnRsv1" Content="A"               HorizontalAlignment="Left" Margin="10,15,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow"/>
            <lib:EnableButton x:Name="BtnRsv2" Content="B"               HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow"/>
            <lib:EnableButton x:Name="BtnRsv3" Content="C"               HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow"/>
            <lib:EnableButton x:Name="BtnRsv4" Content="D"               HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="5,0,5,0">
            <TextBlock Text="Connections"                                HorizontalAlignment="Stretch" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="Black" Background="White" FontWeight="Bold" TextAlignment="Center" FontSize="14"/>
            <TextBlock Text="Enable"                                     HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
            <lib:EnableButton x:Name="BtnMotor" Content="Motor"          HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"  Background="Yellow" FontWeight="Bold" OnEnable="MotorEnable" OnDisable="MotorDisable"/>
            <lib:EnableButton x:Name="BtnCamera1" Content="Camera 1"     HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"  Background="Yellow" FontWeight="Bold" OnEnable="Camera1Start" OnDisable="Camera1Stop"/>
            <lib:EnableButton x:Name="BtnCamera2" Content="Camera 2"     HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"  Background="Yellow" FontWeight="Bold" OnEnable="Camera2Start" OnDisable="Camera2Stop"/>
            <lib:EnableButton x:Name="BtnLight" Content="Light"          HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow"/>
            <lib:EnableButton x:Name="BtnJoystick" Content="Joystick"    HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow" OnEnable="JoystickStart" OnDisable="JoystickStop"/>
            <lib:EnableButton x:Name="BtnCtrl" Content="Controller"      HorizontalAlignment="Left" Margin="10,5,0,0"  VerticalAlignment="Top" Width="75"  FontWeight="Bold" Background="Yellow" OnEnable="ControllerStart" OnDisable="ControllerStop"/>
            <Button x:Name="BtnGetLog" Content="Log"                     HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Width="75"  FontWeight="Bold" HorizontalContentAlignment="Left" BorderThickness="0" Click="BtnGetLog_Click"/>
            <Button x:Name="BtnLoadParam" Content="Load Param."          HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"  FontWeight="Bold" HorizontalContentAlignment="Left" BorderThickness="0" Click="BtnLoadParam_Click"/>
            <Button x:Name="BtnSaveParam" Content="Save Param."          HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"  FontWeight="Bold" HorizontalContentAlignment="Left" BorderThickness="0" Click="BtnSaveParam_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2"  Margin="5,0,5,0">
            <TextBlock Text="Motors" HorizontalAlignment="Stretch" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="Black" Background="White" FontWeight="Bold" TextAlignment="Center" FontSize="14"/>
            <TextBlock Text="Directions" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="CH" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Mot." HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Enc." HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="1" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="2" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="3" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <lib:EnableButton x:Name="BtnJ0" Grid.Row="1" Grid.Column="1" Content="rev."          HorizontalAlignment="Stretch" Margin="5,5,5,0" VerticalAlignment="Top" Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
                <lib:EnableButton x:Name="BtnJ1" Grid.Row="2" Grid.Column="1" Content="rev."          HorizontalAlignment="Stretch" Margin="5,5,5,0" VerticalAlignment="Top" Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
                <lib:EnableButton x:Name="BtnJ2" Grid.Row="3" Grid.Column="1" Content="rev."          HorizontalAlignment="Stretch" Margin="5,5,5,0" VerticalAlignment="Top" Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
                <lib:EnableButton x:Name="BtnP0" Grid.Row="1" Grid.Column="2" Content="rev."          HorizontalAlignment="Stretch" Margin="5,5,5,0" VerticalAlignment="Top" Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
                <lib:EnableButton x:Name="BtnP1" Grid.Row="2" Grid.Column="2" Content="rev."          HorizontalAlignment="Stretch" Margin="5,5,5,0" VerticalAlignment="Top" Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
                <lib:EnableButton x:Name="BtnP2" Grid.Row="3" Grid.Column="2" Content="rev."          HorizontalAlignment="Stretch" Margin="5,5,5,0" VerticalAlignment="Top" Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
            </Grid>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Feedback / Direct" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Foreground="White"/>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="1" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="2" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="3" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <lib:EnableButton x:Name="BtnFbMode0" Grid.Row="0" Grid.Column="1" Content="Feedback"           HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"  Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
                <lib:EnableButton x:Name="BtnFbMode1" Grid.Row="1" Grid.Column="1" Content="Feedback"           HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"  Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
                <lib:EnableButton x:Name="BtnFbMode2" Grid.Row="2" Grid.Column="1" Content="Feedback"           HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"  Background="Yellow" FontWeight="Bold" OnEnableChanged="OnMotorChanged"/>
            </Grid>
            <Button x:Name="BtnPosReset" Content="Reset Pos."                HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Width="75"  FontWeight="Bold" HorizontalContentAlignment="Left" BorderThickness="0" Click="BtnPosReset_Click"/>
            <!--
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
