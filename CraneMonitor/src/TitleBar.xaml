<UserControl x:Class="CraneMonitor.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CraneMonitor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="White" BorderThickness="0" CornerRadius="7" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" Background="White" >
        <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType={x:Type UserControl} } }" HorizontalAlignment="Stretch" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" TextAlignment="Center" FontSize="14"/>
    </Border>
</UserControl>
